<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvFingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/biometricprompt_color_primary"
        android:padding="10dp"
        android:text="@string/fingerprint_recognition"
        android:textColor="@color/biometricprompt_color_ffffff"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="onClick"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick2_SendStatic"
            android:text="onClick2-SendStatic"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick2_SendStaticAndDynamic"
            android:text="onClick2-SendStaticAndDynamic"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick2_StaticAndDynamicSetPackage"
            android:text="onClick2-StaticAndDynamicSetPackage"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick2_StaticAndDynamicMyPackage"
            android:text="onClick2-StaticAndDynamicMyPackage"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickAddTab1"
            android:text="onClickAddTab1"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickAddTab2"
            android:text="onClickAddTab2"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickTest"
            android:text="onClickTest"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="106dp" />

    </LinearLayout>
</LinearLayout>